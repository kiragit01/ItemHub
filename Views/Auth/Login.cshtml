@using ItemHub.Models.Auth
@model LoginModel

<div class="text-center">

<h2>Авторизация</h2>

    <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true" method="post" class="row mt-3 needs-validation" novalidate>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="col-lg-3 col-sm-7 m-auto">
            <div>
                <label asp-for="Login">Логин:</label><br />
                <div class="input-group has-validation">
                    <div class="input-group-text">@@</div>
                    <input type="text" asp-for="Login" class="form-control" required />
                    <div class="invalid-feedback">
                        Введите логин.
                    </div>
                </div>
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div>
                <label asp-for="Password">Пароль:</label><br />
                <div class="position-relative has-validation">
                    <input type="password" asp-for="Password"
                           style="background-position: right calc(2em + .1875rem) center;" 
                           class="form-control" id="password-input" required>
                    <a class="password-control" style="top: 10px;" 
                       onclick="return toggle_password_visibility(this, 'password-input');" id="img-hide"></a>
                    <div class="invalid-feedback">
                        Введите пароль.
                    </div>
                    @Html.ValidationMessageFor(x => x.Password)
                </div>
            </div>
            <div>
                <br/>
                <input class="btn btn-primary" type="submit" value="Войти" />
            </div>
        </div>
    </form>
    <a asp-action="Register" asp-controller="Auth">Создать аккаунт</a>
</div>

<script src="~/js/needs-validation.js" async></script>
<script src="~/js/password_visibility.js" async></script>